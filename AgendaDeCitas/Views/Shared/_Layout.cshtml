<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Sin vello</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&display=swap" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        body {
            font-family: 'Nunito', sans-serif;
        }

        .back-button {
            position: absolute;
            top: 10px;
            right: 10px;
            z-index: 1000;
            background-color: #fff;
            border: 1px solid #000;
            border-radius: 15px;
            padding: 5px 10px;
            display: flex;
            align-items: center;
            gap: 5px;
            color: #000;
            font-size: 12px;
        }

            .back-button i {
                font-size: 18px; /* Ajusta el tamaño del ícono según sea necesario */
            }
    </style>
</head>
<body>
    <img src="https://eu062.flowww.net/sinvello/custom/logo.png" style="margin-left:4%" alt="Logo" />

    <!-- Botón de Atrás -->
    <button class="back-button" onclick="window.history.back();">
        <i class="fas fa-arrow-left"></i> Atrás
    </button>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* Scripts de bibliotecas de terceros *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @* Otros scripts personalizados si los tienes *@
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
    <footer>
        <div class="token-display" hidden>
            @if (Context.Session.GetString("ClientToken") != null)
            {
                <p>@Context.Session.GetString("ClientToken")</p>
            }
        </div>
    </footer>
</body>
</html>
